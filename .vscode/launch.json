{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸš€ Launch Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/server.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "disaster-management:*"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node",
      "runtimeArgs": ["--trace-warnings", "--experimental-modules"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ—„ï¸ Setup Database",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/setup-database.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--trace-warnings"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸŒ± Seed Database",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/seed-database.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”„ Run Migrations",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/migrate.js",
      "args": ["run"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§ª Run Tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand", "--detectOpenHandles"],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”„ Debug with Nodemon",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "args": ["${workspaceFolder}/src/server.js"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "disaster-management:*"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ§ª Debug Single Test",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["${fileBasenameNoExtension}", "--runInBand", "--no-cache", "--detectOpenHandles"],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸ”§ Debug Migration",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/migrate.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ğŸŒ± Debug Seed Script",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/scripts/seed-database.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "runtimeExecutable": "node"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "ğŸ”— Attach to Server",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    }
  ],
  "compounds": [
    {
      "name": "ğŸš€ Launch & Debug Server",
      "configurations": ["ğŸ”„ Debug with Nodemon"],
      "stopAll": true
    },
    {
      "name": "ğŸ§ª Test & Debug Suite",
      "configurations": ["ğŸ§ª Run Tests"],
      "stopAll": true
    }
  ]
}
